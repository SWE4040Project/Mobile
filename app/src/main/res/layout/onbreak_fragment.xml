<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/office3"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="56dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.94">

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/shiftStart"
                android:layout_weight="1" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/shiftEnd"
                android:layout_gravity="end"
                android:textAlignment="textEnd"
                android:layout_weight="1" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_height="60dp"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:indeterminateOnly="false"
            android:progressDrawable="@android:drawable/progress_horizontal"
            android:indeterminateDrawable="@android:drawable/progress_indeterminate_horizontal"
            android:layout_weight="0.94" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:text="Status:"
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textSize="27sp"
                android:layout_marginRight="30dp"/>

            <TextView
                android:text="On Break"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textSize="27sp"
                android:textColor="@android:color/holo_blue_dark"
                android:textStyle="bold"
                android:layout_marginBottom="15dp"
                android:id="@+id/timesClocked" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="Shift:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textSize="22sp"
                android:layout_marginRight="30dp"/>

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/shift"
                android:layout_weight="1"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="Shift Notes:"
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textSize="22sp"
                android:layout_marginRight="30dp"/>

            <at.markushi.ui.CircleButton
                android:id="@+id/addnote_button"
                android:layout_width="64dip"
                android:layout_height="64dip"
                android:src="@drawable/pencil"
                app:cb_color="#787544"
                app:cb_pressedRingWidth="8dip"
                android:padding="10dp"
                tools:cb_color="@color/color1"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/clockedNotes"
                android:layout_width="166dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:minHeight="195dp"
                android:minWidth="200dp"
                android:maxHeight="195dp"
                android:maxWidth="200dp"
                android:background="#bdd6d7d7"
                android:gravity="top"
                android:isScrollContainer="false"
                android:inputType="none"
                android:layout_toLeftOf="@+id/onbreak_button"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <at.markushi.ui.CircleButton
                android:id="@+id/onbreak_button"
                android:layout_width="94dip"
                android:layout_height="94dip"
                android:src="@drawable/cooler_not_allowed"
                app:cb_color="#FF0000"
                app:cb_pressedRingWidth="8dip"
                android:padding="12dp"
                tools:cb_color="@color/color1"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="115dp" />

        </RelativeLayout>

    </LinearLayout>
</ScrollView>