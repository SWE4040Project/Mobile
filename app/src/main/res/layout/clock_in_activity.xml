<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="mobiledev.unb.clockin.MainActivity">

    <include
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:text="Json Test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/json_button"
        android:layout_marginTop="28dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Auth Test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/auth_button"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/json_button"
        android:layout_alignLeft="@+id/json_button"
        android:layout_alignStart="@+id/json_button" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/auth_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:id="@+id/txtResponse" />

</RelativeLayout>
